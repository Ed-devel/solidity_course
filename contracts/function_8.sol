// Videos 8 - Solidity Function | What are functions in Solidity Like, Function, Modifiers, Pure

contract LearnFunction {
    
    // uint256 public hey; // variável de estado
    uint256 hey; // Quando não declara a palavra <public> a variável NÃO é acessível

    /* pegar dados com ajuda da função.
    Essa é uma função simples que vermite ver o valor da variável de estado*/
    function getInfo() public view returns(uint256){
        return hey;
    }

    function updateData( uint256 _hey)public{
        hey = _hey;
    }
    
    function soma(uint256 _a, uint256 _b) public view returns (uint){
        uint256 newNumber = _a + _b;
        return newNumber;
    }

    /* Diferente da função anterior, nessa função é retornada a variável de
    estado <hey>. Porêm NÃO é possível alterar variáveis de estado quando há
    o <view> na declaração da função. Nesse caso é necessário remover a palavra
    <view> . */
    function soma_update(uint256 _a, uint256 _b) public returns (uint){
        hey = _a + _b;
        return hey;
    }
}

